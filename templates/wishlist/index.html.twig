{% extends 'frontBase.html.twig' %}
{% block title %}Magasin{% endblock %}

{% block content %}
<!-- banner-section start -->
<section id="banner-section" class="inner-banner profile features shop">
    <div class="ani-img">
        <img class="img-1" src="{{asset('front/images/banner-circle-1.png')}}" alt="icon">
        <img class="img-2" src="{{asset('front/images/banner-circle-2.png')}}" alt="icon">
        <img class="img-3" src="{{asset('front/images/banner-circle-2.png')}}" alt="icon">
    </div>
    <div class="banner-content d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="main-content">
                        <h1>Shop</h1>
                        <div class="breadcrumb-area">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb d-flex justify-content-center">
                                    <li class="breadcrumb-item"><a href="">Accueil</a></li>
                                    <li class="breadcrumb-item"><a href="{{ path('app_afficherCategorieFront') }}">Magasin</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner-section end -->



 <!-- Featured Products Start -->
 <section id="featured-products" class="pt-120 pb-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 d-flex align-items-center">
                <div class="section-header text-center">
                    <h2 class="title">Vos produits préférés</h2>
                </div>
            </div>
        </div>
        <div class="row cus-m">
            {% for prod in liste %}
           
            <div class="col-lg-4 col-md-6">
                
                <div class="single-item" style="min-height: 450px;max-height: 450px"> 
                    <a href="{{path('app_detailProduitFront',{ id:prod.getProduits().getId() })}}">
                    <span class="new">Vous avez aimé ce produit</span>
                    <div class="img-area text-center" style="min-height: 250px;max-height:250px">
                        <img src="{{asset('eshop/produit/'~prod.getProduits().image)}}" alt="image" width="90%">
                    </div>
                    <div class="bottom-item text-center">
                        
                        <a href="{{path('app_detailProduitFront',{ id:prod.getProduits().getId() })}}" ><h6>{{ prod.getProduits().getNomProduit() }}</h6></a>
                        <p class="text-sm">{{ prod.getProduits().getCategorie().getNomCategorie()}}</p>
                          
                        <div class="bottom-area d-flex align-items-center justify-content-between">
                            <h5>{{ prod.getProduits().getPrix() }} DT</h5>
                        </div>
                    </div>
                </a>
                </div>
            </div>
        
            {% endfor %} 
           
        </div>
    </div>
</section>
<!-- Featured Products End -->
{% endblock %}